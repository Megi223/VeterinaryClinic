@model IEnumerable<VeterinaryClinic.Web.ViewModels.News.NewsAllViewModel>
<link rel="stylesheet" href="~/css/customPagination.css" />
<section class="hero-wrap hero-wrap-2" style="background-image: url('https://res.cloudinary.com/dpwroiluv/image/upload/v1604684305/bg_2_gfdtjt.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>News <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread"><b>News</b></h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
            @foreach (var news in Model)
            {
                <div class="col-md-6 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <a href="blog-single.html" class="block-20 rounded" style="background-image: url(@news.ImageUrl);">
                        </a>
                        <div class="text p-4">
                            <div class="meta mb-2">
                                <div><a><time datetime="@news.CreatedOn.ToString("O")"></time></a></div>
                            </div>
                            <h3 class="heading"><a asp-controller="News" asp-action="Details" asp-route-id="@news.Id"><b>@news.Title</b></a></h3>
                            <h6>@news.Summary</h6>
                        </div>
                    </div>
                </div>
            }
            <div class="row mt-5">
                        <div class="col text-center">
                            <div class="block-27">
                                <pioneer-pagination info="@ViewBag.PaginatedMeta" route="/News/All" previous-page-text="<" next-page-text=">"></pioneer-pagination>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
</section>









