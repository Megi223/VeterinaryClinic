@model VeterinaryClinic.Web.ViewModels.News.NewsBarViewModel

<div class="col-md-6 col-lg-3 mb-4 mb-md-0">
    <h2 class="footer-heading">Latest News</h2>
    @foreach (var news in Model.LatestNews)
    {
        <div class="block-21 mb-4 d-flex">
            <a class="img mr-4 rounded" style="background-image: url(@news.ImageUrl);"></a>
            <div class="text">
                <h3 class="heading"><a asp-area="" asp-controller="News" asp-action="Details" asp-route-id="@news.Id">@news.Title</a></h3>
                <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span>@news.CreatedOn.ToString("D")</a></div>
                </div>
            </div>
        </div>
    }
</div>
