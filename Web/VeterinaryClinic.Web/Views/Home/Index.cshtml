<div class="wrap">
    <div>
        <div id="search-dropdown" class="custom-dropdown toggle-holder">

            <form id="target" method="get" asp-action="Index" asp-controller="Search" class="form-inline align-content-center">

                <input id="search" class="form-control form-control-sm  ml-3 col-6 search-field" type="text" placeholder="Search..."
                       aria-label="Search" style="border: 2px solid #4dd0e1" name="search">

                <span style="display:inline-block; width: 10px;"></span>
                <button class="btn btn-light btn-group-sm" type="submit"><i class="fa fa-search d-flex justify-content-center block header-search-form-icon"></i></button>



                <span style="display:inline-block; width: 10px;"></span>

                <input type="checkbox"
                       id="Veterinarians"
                       data-check="true"
                       value="true"
                       checked
                       name="Veterinarians" />
                <span style="display:inline-block; width: 10px;"></span>

                <label class="checkbox-label" for="Veterinarians" style="color:white">Veterinarians</label>

                <span style="display:inline-block; width: 10px;"></span>

                <input type="checkbox"
                       id="Services"
                       data-check="true"
                       value="true"
                       checked
                       name="Services" />
                <span style="display:inline-block; width: 10px;"></span>

                <label class="checkbox-label" for="Services" style="color:white">Services</label>

                <span style="display:inline-block; width: 10px;"></span>

                <input type="checkbox"
                       id="News"
                       data-check="true"
                       value="true"
                       checked
                       name="News" />
                <span style="display:inline-block; width: 10px;"></span>

                <label class="checkbox-label" for="News" style="color:white">News</label>








            </form>

        </div>

    </div>
</div>



