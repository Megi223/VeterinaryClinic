</section>


@section Scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $('#search-dropdown form input:checkbox').click(function (ev) {
            var checkbox = $(ev.currentTarget);
            var checkboxValueAsBool = JSON.parse(checkbox.val())
            checkbox.val(!checkboxValueAsBool);
        });
    </script>
    <script>

        $("input[data-check]").each(function (el) {
            $("#search").autocomplete({

                source: function (request, response) {
                    $.ajax({
                        url: 'api/searchapi/',
                        type: "GET",
                        dataType: "json",

                        data: {
                            term: request.term,
                            veterinarians: $('#Veterinarians').is(':checked'),
                            services: $('#Services').is(':checked'),
                            news: $('#News').is(':checked')
                        },
                        success: response


                    });
                }

            });

        });

    </script>


}



