    this.ViewData["Title"] = "Home Page";
}


<link rel="stylesheet" href="~/css/autocomplete.css">
@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@if (this.TempData["SuucessfulRequest"] != null)
{
