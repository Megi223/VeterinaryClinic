@model VeterinaryClinic.Web.ViewModels.Appointments.RequestAppointmentViewModel
@{
    ViewData["Title"] = "Contact";
    var pets = Model.Pets.Select(x => new SelectListItem(x.Name, x.Id));
    var vets = Model.Vets.Select(x => new SelectListItem(x.Name, x.Id));
}

<style>
    label {color:white}
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('https://res.cloudinary.com/dpwroiluv/image/upload/v1604684305/bg_2_gfdtjt.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Contact <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread"><b>Contact</b></h1>
            </div>
        </div>
    </div>
</section>
<br />
<br />

<div class="row justify-content-center">
    <div style="text-align:center" class="col-6">
        <h3>You can contact us on +359 123 456 789</h3>
        <h1><b>OR</b></h1>
        <h3>Make An Appointment</h3>
    </div>
</div>
<br />
<br />

<section class="ftco-appointment ftco-section ftco-no-pt ftco-no-pb img" style="background-image: url(https://res.cloudinary.com/dpwroiluv/image/upload/v1604684305/bg_3_ocmklz.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row d-md-flex justify-content-end">
            <div class="col-md-12 col-lg-6 half p-3 py-5 pl-lg-5 ftco-animate">
                <h2 class="mb-4">Consultation</h2>
                <form method="post" class="appointment" asp-area="Owner" asp-controller="Appointments" asp-action="RequestAppointment">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="@Model.Subject"></label>
                                <input asp-for="@Model.Subject" class="form-control" />
                                <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" placeholder="Your name" value="@User.Identity.Name" disabled />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.PetId"></label>
                                <select asp-for="@Model.PetId" asp-items="pets" class="form-control">
                                    <option selected="selected" value="">Please select pet name</option>
                                </select>
                                <span asp-validation-for="@Model.PetId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="@Model.VetId"></label>
                                <select asp-for="@Model.VetId" asp-items="vets" class="form-control">
                                    <option selected="selected" value="">Please select a vet</option>
                                </select>
                                <span asp-validation-for="@Model.VetId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <label asp-for="@Model.Date"></label>
                                    <div class="icon"><span class="fa fa-calendar"></span></div>
                                    <input asp-for="@Model.Date" type="text" class="form-control appointment_date" placeholder="Date" value="@(DateTime.UtcNow.Date)">
                                    <span asp-validation-for="@Model.Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-wrap">
                                    <label asp-for="@Model.Time"></label>
                                    <div class="icon"><span class="fa fa-clock-o"></span></div>
                                    <input asp-for="@Model.Time" type="text" class="form-control appointment_time" placeholder="Time">
                                    <span asp-validation-for="@Model.Time" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @*<input type="submit" value="Send message" class="btn btn-primary py-3 px-4">*@
                                <button type="submit" class="btn btn-primary">Request An Appointment</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
