@{ 
    this.ViewData["Title"] = "Contact";
}
<style>
    #label {
        color:white;
    }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('https://res.cloudinary.com/dpwroiluv/image/upload/v1604684305/bg_2_gfdtjt.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Contact <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread"><b>Contact</b></h1>
            </div>
        </div>
    </div>
</section>
<br />
<br />

<div class="row justify-content-center">
    <div style="text-align:center" class="col-6">
        <h3>You can contact us on +359 123 456 789</h3>
        <h1><b>OR</b></h1>
        <h3>Make An Appointment</h3>
    </div>
</div>
<br />
<br />

<section class="ftco-appointment ftco-section ftco-no-pt ftco-no-pb img" style="background-image: url(https://res.cloudinary.com/dpwroiluv/image/upload/v1604684305/bg_3_ocmklz.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row d-md-flex justify-content-end">
            <div class="col-md-12 col-lg-6 half p-3 py-5 pl-lg-5 ftco-animate">
                <h2 class="mb-4">Consultation</h2>
                <form method="post" class="appointment" asp-area="" asp-controller="Home" asp-action="Contact">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label id="label">Subject</label>
                                <input name="subject" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="label">Username</label>
                                <input type="text" class="form-control" placeholder="Your name" name="username"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="label">Pet name</label>
                                <input type="text" class="form-control" placeholder="Your pet name" name="petname"/>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label id="label">Vet name</label>
                                <input type="text" class="form-control" placeholder="Vet name" name="vetname"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="label">Date</label>
                                <div class="input-wrap">
                                    <div class="icon"><span class="fa fa-calendar"></span></div>
                                    <input type="text" class="form-control appointment_date" placeholder="Date" name="date">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label id="label">Time</label>
                                <div class="input-wrap">
                                    <div class="icon"><span class="fa fa-clock-o"></span></div>
                                    <input type="text" class="form-control appointment_time" placeholder="Time" name="time">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">

                                <button type="submit" class="btn btn-primary">Request An Appointment</button>
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</section>