@model VeterinaryClinic.Web.ViewModels.Pets.EditPetViewModel

@{
    this.ViewData["Title"] = "Edit";
    var vets = Model.Vet.Select(x => new SelectListItem(x.Name, x.Id));

}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 style="text-align:center"><b>@ViewData["Title"]</b></h1>
            <form method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.VetId"></label>
                    <select asp-for="@Model.VetId" asp-items="vets" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.VetId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.Weight"></label>
                    <input asp-for="@Model.Weight" class="form-control" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>
                
                
                <div class="form-group">
                    <div class="input-wrap">
                        <label asp-for="@Model.Sterilised"></label>
                        <select asp-for="@Model.Sterilised" type="text" class="form-control">
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="@Model.Sterilised" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewPicture"></label>
                    <input asp-for="@Model.NewPicture" class="form-control" />
                    <span asp-validation-for="@Model.NewPicture" class="text-danger"></span>
                    <span class="text-info">Note: If you do not upload a new image, the old one will be used.</span>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>
<br />