@model VeterinaryClinic.Web.ViewModels.Pets.AddPetInputModel

@{
    ViewData["Title"] = "Add Pet";
    var vets = Model.Vet.Select(x => new SelectListItem(x.Name, x.Id));
}
@if (this.TempData["InvalidPicture"] != null)
{
    <div class="alert alert-danger" role="alert">
        @this.TempData["InvalidPicture"]
    </div>
}
@if (this.TempData["InvalidModelState"] != null)
{
    <div class="alert alert-danger" role="alert">
        @this.TempData["InvalidModelState"]
    </div>
}
@if (this.TempData["InvalidIdentificationNumber"] != null)
{
    <div class="alert alert-danger" role="alert">
        @this.TempData["InvalidIdentificationNumber"]
    </div>
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h1 style="text-align:center"><b>@ViewData["Title"]</b></h1>
            <form method="post" enctype="multipart/form-data">
                <h3><strong>@TempData["Message"]</strong></h3>
                <div>
                    <label asp-for="@Model.Type"></label>
                    <select asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<VeterinaryClinic.Data.Models.Enumerations.TypeOfAnimal>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.VetId"></label>
                    <select asp-for="@Model.VetId" asp-items="vets" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.VetId" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Gender"></label>
                    <select asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<VeterinaryClinic.Data.Models.Enumerations.Gender>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Weight"></label>
                    <input asp-for="@Model.Weight" class="form-control" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.IdentificationNumber"></label>
                    <input asp-for="@Model.IdentificationNumber" class="form-control" />
                    <span asp-validation-for="@Model.IdentificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-wrap">
                        <label asp-for="@Model.Birthday"></label>
                        <input asp-for="@Model.Birthday" type="text" class="form-control appointment_date" placeholder="Date">
                        <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-wrap">
                        <label asp-for="@Model.Sterilised"></label>
                        <select asp-for="@Model.Sterilised" type="text" class="form-control">
                            <option selected="selected" value="">Please select</option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                        <span asp-validation-for="@Model.Sterilised" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Picture"></label>
                    <input asp-for="@Model.Picture" class="form-control" />
                    <span asp-validation-for="@Model.Picture" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Pet</button>
            </form>
        </div>
    </div>
</div>
<br />

