@model IEnumerable<IGrouping<string,VeterinaryClinic.Web.ViewModels.ChatMessages.SelectChatViewModel>>

@{ 
    this.ViewData["Title"] = "Start Chat";
}
<br />
<h3 style="text-align:center"><b>Who do you want to start chat with?</b></h3>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Their pets</th>
                    <th>Start</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                <tr>
                    <td>@Model.ToList()[i].ElementAt(0).OwnerFullName</td>
                    <td>@Model.ToList()[i].ElementAt(0).Pets</td>
                    <td><a class="btn btn-info" asp-area="Vet" asp-controller="Vet" asp-action="Chat" asp-route-id="@Model.ToList()[i].ElementAt(0).OwnerId">Start Chat</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
