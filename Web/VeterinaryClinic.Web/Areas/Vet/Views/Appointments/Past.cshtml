@model IEnumerable<VeterinaryClinic.Web.ViewModels.Appointments.PastAppointmentViewModel>
@{
    ViewData["Title"] = "Past Appointments";
}


<br />

@if (Model.Count() == 0)
{
    <h3 style="text-align:center"><b>No past appointments</b></h3>
    <br />
}
else
{
    <div class="container">
        <h3 style="text-align:center"><b>@ViewData["Title"]</b></h3>
        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Owner</th>
                    <th scope="col">Pet</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Duration</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <th scope="row">@appointment.OwnerFullName</th>
                        <td><a asp-area="Owner" asp-controller="Pet" asp-action="Details" asp-route-id="@appointment.PetId">@appointment.PetName</a></td>
                        <td>@appointment.Subject</td>
                        <td>@appointment.DurationFormatted minutes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
}

